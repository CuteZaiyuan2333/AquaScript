func simple_random(seed, min_val, max_val):
    # ä½¿ç”¨çº¿æ€§åŒä½™ç”Ÿæˆå™¨çš„ç®€åŒ–ç‰ˆæœ¬
    a = 1664525
    c = 1013904223
    m = 4294967296  # 2^32
    
    # ç”Ÿæˆä¸‹ä¸€ä¸ªéšæœºæ•°
    next_seed = (a * seed + c) % m
    
    # æ˜ å°„åˆ°æŒ‡å®šèŒƒå›´
    range_size = max_val - min_val + 1
    return min_val + (next_seed % range_size)


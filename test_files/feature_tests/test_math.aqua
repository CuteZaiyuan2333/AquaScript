# 数学功能测试

# 基本数学运算
var a = 10
var b = 3

print("Basic math operations")
print("a + b = " + str(a + b))
print("a - b = " + str(a - b))
print("a * b = " + str(a * b))
print("a / b = " + str(a / b))
print("a % b = " + str(a % b))
print("a ** b = " + str(a ** b))

# 数学函数
func abs_value(n):
    if n < 0:
        return -n
    else:
        return n

func max_value(a, b):
    if a > b:
        return a
    else:
        return b

print("abs(-5) = " + str(abs_value(-5)))
print("max(10, 20) = " + str(max_value(10, 20)))

# 计算阶乘
func factorial(n):
    if n <= 1:
        return 1
    else:
        return n * factorial(n - 1)

print("factorial(5) = " + str(factorial(5)))
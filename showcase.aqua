# 7. 复杂计算
print("\n7. 复杂计算:")

func fibonacci(n):
    if n <= 1:
        return n
    else:
        return fibonacci(n - 1) + fibonacci(n - 2)

func is_prime(n):
    if n < 2:
        return False
    i = 2
    while i * i <= n:
        if n % i == 0:
            return False
        i = i + 1
    return True

print("斐波那契数列第10项: " + str(fibonacci(10)))
print("17是质数吗? " + str(is_prime(17)))
print("18是质数吗? " + str(is_prime(18)))

# 8. 嵌套函数调用
print("\n8. 嵌套函数调用:")

func max_of_three(a, b, c):
    func max_of_two(x, y):
        if x > y:
            return x
        else:
            return y
    
    return max_of_two(max_of_two(a, b), c)

result = max_of_three(10, 25, 15)
print("三个数的最大值: " + str(result))


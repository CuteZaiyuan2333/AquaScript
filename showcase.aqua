# 4. 函数定义和调用
print("\n4. 函数:")

func greet(person):
    return "Hello, " + person + "!"

func calculate_area(length, width):
    return length * width

func factorial(n):
    if n <= 1:
        return 1
    else:
        return n * factorial(n - 1)

